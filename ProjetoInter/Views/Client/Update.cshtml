@model ProjetoInter.Models.Client

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=Client, initial-scale=1.0">
    <title>Atualizar</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>

<body class="container-fluid">
    <h2>Atualizar</h2>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/client/read">Clientes</a></li>
            <li class="breadcrumb-item active" aria-current="page">Atulizar</li>
        </ol>
    </nav>

    <form action="/client/update/@Model.UserId" method="post" class="row g-3">
        <div class="col-md-6">
            <label for="inputName4" class="form-label">Nome </label>
            <input type="text" class="form-control" name="Name" id="inputName4" value="@Model.Name"
                required>
        </div>
        <div class="col-md-6">
            <label for="inputPhone4" class="form-label">Telefone</label>
            <input type="tel" name="Phone" id="inputPhone4" class="form-control" value="@Model.Phone" required>
        </div>
        <div class="col-md-6">
            <label for="inputDateOfBirth" class="form-label">Data de Nascimento</label>
            <input type="date" name="DateOfBirth" id="inputDateOfBirth" class="form-control" value="@Model.DateOfBirth"
                required>
        </div>
        <div class="col-md-6">
            <label for="inputGender" class="form-label">Sexo</label>
            <input type="text" name="Gender" id="inputGender" class="form-control" value="@Model.Gender" required>
        </div>
        <div class="col-md-6">
            <label for="inputEmail4" class="form-label">E-Mail</label>
            <input type="email" name="Email" id="inputEmail4" class="form-control" value="@Model.Email" required>
        </div>
        <div class="col-md-6">
            <label for="inputPassword4" class="form-label">Senha</label>
            <input type="password" name="Password" id="inputPassword4" class="form-control" value="@Model.Password"
                required>
        </div>
        <div class="col-12">
            <label for="inputCity" class="form-label">Cidade</label>
            <input type="text" name="City" class="form-control" id="inputCity" value="@Model.City" required>
        </div>
        <div class="col-md-6">
            <label for="inputStreet" class="form-label">Rua</label>
            <input type="text" name="Street" class="form-control" id="inputStreet" value="@Model.Street" required>
        </div>
        <div class="col-md-3">
            <label for="inputDistrict" class="form-label">Bairro</label>
            <input type="text" name="District" class="form-control" id="inputDistrict" value="@Model.District" required>
        </div>
        <div class="col-md-3">
            <label for="inputNumber" class="form-label">NÃºmero</label>
            <input type="number" name="Number" class="form-control" id="inputNumber" value="@Model.Number" required>
        </div>
        <div class="col-md-4">
            <label for="inputComplement" class="form-label">Complemento</label>
            <input type="text" name="Complement" class="form-control" id="inputComplement" value="@Model.Complement">
        </div>
        <div class="col-md-4">
            <label for="inputState" class="form-label">Estado</label>
            <input type="text" name="State" class="form-control" id="inputState" value="@Model.State" required>
        </div>
        <div class="col-md-4">
            <label for="inputCep" class="form-label">CEP</label>
            <input type="text" name="Cep" class="form-control" id="inputCep" value="@Model.Cep" required>
        </div>
        <div class="col-md-6">
            <button class="btn btn-primary w-100">Salvar</button>
        </div>
        <div class="col-md-6">
            <a href="/client/read" class="btn btn-outline-secondary w-100">Voltar</a>
        </div>
    </form>

</body>

</html>