@model List<ProjetoInter.Models.Client>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=Client, initial-scale=1.0">
    <title>Read</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>

<body class="container-fluid">
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <i class="bi bi-list"></i><a href="/menu/read" class="navbar-brand"> Menu</a>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a href="/client/read" class="nav-link active" aria-current="page">Clientes</a>
                    </li>
                    <li class="nav-item">
                        <a href="/employee/read" class="nav-link active" aria-current="page">Funcionários</a>
                    </li>
                    <li class="nav-item">
                        <a href="/service/read" class="nav-link active" aria-current="page">Serviços</a>
                    </li>
                    <li class="nav-item">
                        <a href="/clientServices/readEmployee" class="nav-link active"
                            aria-current="page">Agendamento</a>
                    </li>
                    <li class="nav-item position-fixed top-0 end-0 p-3">
                        <a href="/index/read" class="nav-link active" aria-current="page"><i
                                class="bi bi-box-arrow-right"></i> Sair</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <h2>Clientes</h2>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item active" aria-current="page">Read</li>
        </ol>
    </nav>

    <table class="table table-striped ">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Telefone</th>
                <th>Nascimento</th>
                <th>E-Mail</th>
                <th>Sexo</th>
                <th>Cidade</th>
                <th>Rua</th>
                <th>Bairro</th>
                <th>Número</th>
                <th>Complemento</th>
                <th>Cep</th>
                <th>Estado</th>
            </tr>
        </thead>
        @foreach (var client in Model)
        {
            <tr>
                <td>@client.Name</td>
                <td>@client.Phone</td>
                <td>@client.DateOfBirth</td>
                <td>@client.Email</td>
                <td>@client.Gender</td>
                <td>@client.City</td>
                <td>@client.Street</td>
                <td>@client.District</td>
                <td>@client.Number</td>
                <td>@client.Complement</td>
                <td>@client.Cep</td>
                <td>@client.State</td>
                <td>
                    <div class="btn-group" role="group">
                        <a href="/client/update/@client.UserId" class="btn btn-sm btn-outline-success"><i
                                class="bi-pencil-square"></i>Edit</a>
                        <a href="/client/delete/@client.UserId" class="btn btn-sm btn-outline-danger"><i
                                class="bi-trash"></i>Delete</a>
                    </div>
                </td>
            </tr>
        }
    </table>
    <div class="d-inline-flex gap-1">
        <a href="/client/create" type="button" class="btn btn-primary" data-bs-toggle="button">Adicionar</a>
    </div>
</body>

</html>