@model List<ProjetoInter.Models.User>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=User, initial-scale=1.0">
    <title>Read</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>

<body class="container-fluid">
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <i class="bi bi-list"></i><a href="/menu/read" class="navbar-brand"> Menu</a>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a href="/user/read" class="nav-link active" aria-current="page">Users</a>
                    </li>
                    <li class="nav-item">
                        <a href="/service/read" class="nav-link active" aria-current="page">Services</a>
                    </li>
                    <li class="nav-item">
                        <a href="" class="nav-link active" aria-current="page">Users Services</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <h2>Users</h2>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item active" aria-current="page">Read</li>
        </ol>
    </nav>

    <table class="table table-striped ">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Telefone</th>
                <th>Data de Nascimento</th>
                <th>E-Mail</th>
                <th>Sexo</th>
                <th>Cidade</th>
                <th>Rua</th>
                <th>Bairro</th>
                <th>NÃºmero</th>
                <th>Complemento</th>
                <th>Cep</th>
                <th>Estado</th>
            </tr>
        </thead>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.Phone</td>
                <td>@user.DateOfBirth</td>
                <td>@user.Email</td>
                <td>@user.Gender</td>
                <td>@user.City</td>
                <td>@user.Street</td>
                <td>@user.District</td>
                <td>@user.Number</td>
                <td>@user.Complement</td>
                <td>@user.Cep</td>
                <td>@user.State</td>
                <td>
                    <div class="btn-group" role="group">
                        <a href="/user/update/@user.UserId" class="btn btn-sm btn-outline-success"><i
                                class="bi-pencil-square"></i>Edit</a>
                        <a href="/user/delete/@user.UserId" class="btn btn-sm btn-outline-danger"><i
                                class="bi-trash"></i>Delete</a>
                    </div>
                </td>
            </tr>
        }
    </table>
    <div class="d-inline-flex gap-1">
        <a href="/user/create" type="button" class="btn btn-primary" data-bs-toggle="button">Adicionar</a>
    </div>
</body>

</html>