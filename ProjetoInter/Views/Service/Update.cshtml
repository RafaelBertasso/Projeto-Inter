@model ProjetoInter.Models.Service

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>

<body class="container-fluid">
    <h2>Update</h2>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/user/read">Services</a></li>
            <li class="breadcrumb-item active" aria-current="page">Update</li>
        </ol>
    </nav>

    <form action="/service/update/@Model.ServiceId" method="post" class="row g-3">
        <div class="col-12">
            <label for="inputName" class="form-label">Nome</label>
            <input type="text" class="form-control" id="inputName" name="Name" value="@Model.Name" required>
        </div>
        <div class="col-12">
            <label for="inputDescription" class="form-label">Descrição</label>
            <input type="text" class="form-control" id="inputDescription" name="Description" value="@Model.Description"
                required>
        </div>
        <div class="col-12">
            <label for="inputDuration" class="form-label">Duração do serviço</label>
            <input type="text" placeholder="Ex: 2 dias" name="Duration" class="form-control" id="inputDuration" value="@Model.Duration"
                required>
        </div>
        <div class="col-12">
            <label for="formFileMultiple" class="form-label">Caminho Fotos</label>
            <input type="file" name="PathFoto" id="formFileMultiple" class="form-control" value="@Model.PathFoto"
                multiple>
        </div>
        <div class="col-md-6">
            <button class="btn btn-primary w-100">Salvar</button>
        </div>
        <div class="col-md-6">
            <a href="/service/read" class="btn btn-outline-secondary w-100">Voltar</a>
        </div>
    </form>
</body>

</html>