@model List<ProjetoInter.Models.Service>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Read</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>

<body class="container-fluid">
    <h2>Services</h2>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item active" aria-current="page">Read</li>
        </ol>
    </nav>

    <table class="table table-hover table-stripped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Photos</th>
            </tr>
        </thead>
        @foreach (var service in Model)
        {
            <tr>
                <td>@service.Name</td>
                <td>@service.Description</td>
                <td>@service.PathFoto</td>
                <td>
                    <div class="btn-group" role="group">
                        <a href="/service/update/@service.ServiceId" class="btn btn-sm btn-outline-success"><i
                                class="bi-pencil-square"></i>Edit</a>
                        <a href="/service/delete/@service.ServiceId" class="btn btn-sm btn-outline-danger"><i
                                class="bi-trash"></i>Delete</a>
                    </div>
                </td>
            </tr>
        }
    </table>
    <div class="d-inline-flex gap-1">
        <a href="/service/create" type="button" class="btn btn-primary" data-bs-toggle="button">Adicionar</a>

    </div>
</body>

</html>