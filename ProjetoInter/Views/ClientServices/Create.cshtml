@model ProjetoInter.Models.ClientService;

@{
    var horaInicial = new TimeSpan(8, 0, 0);
    var horaFinal = new TimeSpan(17, 30, 0);
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=ClientService, initial-scale=1.0">
    <title>Create</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        #agenda {
            text-align: center;
            color: rgb(0, 0, 255);
            text-decoration: none;
            font-weight: bold;
        }

        #agenda:hover {
            color: rgb(0, 0, 176);
            font-size: 1.05em;
        }
    </style>
</head>

<body class="container-fluid">
    <h2>Create</h2>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/clientServices/read">Client Services</a></li>
            <li class="breadcrumb-item active" aria-current="page">Create</li>
        </ol>
    </nav>

    <form action="/clientServices/create" method="get" class="row g-3" asp-action="Create">
        <div class="col-12 form-group">
            <label asp-for="ServiceId" class="control-label form-label">Serviço</label>
            <select asp-for="ServiceId" name="ServiceId" id="ServiceId" class="form-select" required>
                <option selected>Selecione um serviço</option>
                @foreach (var service in ViewBag.Services)
                {
                    <option value="@service.ServiceId">@service.Name</option>
                }
            </select>
        </div>
        <div class="col-6 form-group">
            <label for="Date" class="control-label form-label">Data</label>
            <input type="date" id="Date" name="Date" class="form-control" placeholder="Selecione uma data"
                value="@ViewBag.SelectedDate?.ToString("yyyy-MM-dd")" required onchange="this.form.submit()">
        </div>
    </form>
    <form asp-action="Create" method="post" class="row g-3">
        <input type="hidden" asp-for="DateTime" value="@ViewBag.SelectedDate">

        <div class="col-6 form-group">
            <label for="Time" class="control-label form-label">Horário</label>
            <select name="Time" id="Time" class="form-select" required>
                <option selected>Selecione um horário</option>
                @foreach (var time in ViewBag.AvaliableTimes)
                {
                    <option value="@($"{ViewBag.SelectedDate?.ToString("yyyy-MM-dd")} {time:hh\\:mm}")">
                        @time.ToString(@"hh\:mm")
                    </option>
                }
            </select>
        </div>
        <div class="col-12">
            <label for="inputStatus" class="form-label">Status</label>
            <select name="Status" id="specificSizeSelect" class="form-select" required>
                <option selected>Escolha...</option>
                <option value="1">Aguardando visita</option>
                <option value="2">Em progresso</option>
                <option value="3">Finalizada</option>
                <option value="4">Cancelado</option>
            </select>
        </div>
        <div class="col-12">
            <label for="inputDescription" class="form-label">Descrição</label>
            <input type="text" placeholder="Descrição" name="Description" class="form-control" id="inputDescription"
                required>
        </div>
        <div class="col-md-6">
            <button type="submit" class="btn btn-primary w-100">Agendar</button>
        </div>
        <div class="col-md-6">
            <a href="/clientServices/read" class="btn btn-outline-secondary w-100">Voltar</a>
        </div>
    </form>


</body>

</html>