@model ProjetoInter.Models.ClientService;

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-ClientService, initial-scale=1.0">
    <title>Update</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>

<body class="container-fluid">
    <h2>Atualizar</h2>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/clientServices/readEmployee">Agendamento</a></li>
            <li class="breadcrumb-item active" aria-current="page">Atulizar</li>
        </ol>
    </nav>

    <form action="/clientServices/update/@Model.ClientServiceId" method="post" class="row g-3">
        <div class="col-12 form-group">
            <label for="Date" class="control-label form-label">Data</label>
            <input type="date" id="Date" name="DateTime" class="form-control" asp-for="DateTime"
                value="@ViewBag.SelectedDate?.ToString("yyyy-MM-dd")" onchange="this.form.submit()">
        </div>
        @* <div class="col-12 form-group">
        <label class="control-label form-label">Serviço</label>
        <select asp-for="ServiceId" name="ServiceId" id="ServiceId" class="form-select">
        <option value="">Selecione um serviço</option>
        @foreach (var service in ViewBag.Services as List<ProjetoInter.Models.Service>)
        {
        <option value="@service.ServiceId" @(service.ServiceId == ViewBag.SelectedServiceId ? "selected" :
        "")>@service.Name</option>
        }
        </select>
        </div> *@
        <input type="hidden" asp-for="UserId" value="@ViewBag.UserId">
        <div class="col-12 form-group">
        <label for="Time" class="control-label form-label">Horário</label>
        <select name="Time" id="Time" class="form-select" asp-for="Time">
        <option selected>Selecione um horário</option>
        @foreach (var time in ViewBag.AvaliableTimes)
        {
        var selectedTime = (Model.DateTime.ToString(@"HH:mm") == time.ToString(@"HH:mm")) ? "selected" : "";
        <option value="@($"{ViewBag.SelectedDate?.ToString("yyyy-MM-dd")} {time:hh\\:mm}")" @selectedTime>
        @time.ToString(@"hh\:mm")
        </option>
        }
        </select>
        </div>
        <div class="col-12">
            <label for="inputDescription" class="form-label">Observações (opcional)</label>
            <input type="text" name="Description" class="form-control" id="inputDescription" asp-for="Description"
                value="@Model.Description">
        </div>
    </form>
    <div class="col-md-6">
        <button type="submit" class="btn btn-primary w-100" formaction="/clientServices/update/@Model.ClientServiceId"
            formmethod="post">Salvar</button>
    </div>
    <div class="col-md-6">
        <a href="/clientServices/readEmployee" class="btn btn-outline-secondary w-100">Voltar</a>
    </div>
    </form>

</body>

</html>