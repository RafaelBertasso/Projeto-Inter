@model IEnumerable<ProjetoInter.Models.ClientService>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=ClientService, initial-scale=1.0">
    <title>Read</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>

<body class="container-fluid">
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <i class="bi bi-list"></i><a href="/index/read" class="navbar-brand"> Menu</a>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a href="/clientServices/read" class="nav-link active" aria-current="page">Agendamento</a>
                    </li>
                    <li class="nav-item position-fixed top-0 end-0 p-3">
                        <a href="/index/read" class="nav-link active" aria-current="page"><i
                                class="bi bi-box-arrow-right"></i> Sair</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <h2>Meus Agendamentos</h2>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item active" aria-current="page">Read</li>
        </ol>
    </nav>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Cliente</th>
                <th>Serviço</th>
                <th>Horário</th>
                <th>Descrição</th>
            </tr>
        </thead>
        @foreach (var clientServices in Model)
        {
            <tr>
                <td>@clientServices.Client.Name</td>
                <td>@clientServices.Service.Name</td>
                <td>@clientServices.DateTime</td>
                <td>@clientServices.Description</td>
            </tr>
        }
    </table>
    <div class="d-inline-flex gap-1">
        <a href="/clientServices/create" type="button" class="btn btn-primary" data-bs-toggle="button">Adicionar</a>
    </div>
</body>

</html>