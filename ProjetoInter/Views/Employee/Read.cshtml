@model List<ProjetoInter.Models.Employee>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=Employee, initial-scale=1.0">
    <title>Read</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>

<body class="container-fluid">
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <i class="bi bi-list"></i><a href="/index/read" class="navbar-brand"> Menu</a>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a href="/client/read" class="nav-link active" aria-current="page">Clientes</a>
                    </li>
                    <li class="nav-item">
                        <a href="/employee/read" class="nav-link active" aria-current="page">Funcionários</a>
                    </li>
                    <li class="nav-item">
                        <a href="/service/read" class="nav-link active" aria-current="page">Serviços</a>
                    </li>
                    <li class="nav-item">
                        <a href="/userServices/read" class="nav-link active" aria-current="page">Agendamento</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <h2>Funcionários</h2>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item active" aria-current="page">Read</li>
        </ol>
    </nav>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nome</th>
                <th>E-mail</th>
            </tr>
        </thead>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Name</td>
                <td>@employee.Email</td>
                <td>
                    <div class="btn-group" role="group">
                        <a href="/employee/update/@employee.EmployeeId" class="btn btn-sm btn-outline-success"><i
                                class="bi-pencil-square"></i>Edit</a>
                        <a href="/employee/delete/@employee.EmployeeId" class="btn btn-sm btn-outline-danger"><i
                                class="bi-trash"></i>Delete</a>
                    </div>
                </td>
            </tr>
        }
    </table>
    <div class="d-inline-flex gap-1">
        <a href="/employee/create" type="button" class="btn btn-primary" data-bs-toggle="button">Adicionar</a>
    </div>
</body>

</html>