@model ProjetoInter.Models.User

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=Employee, initial-scale=1.0">
    <title>Atualizar</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>

<body class="container-fluid">
    <h2>Atualizar</h2>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/employee/read">Funcionarios</a></li>
            <li class="breadcrumb-item active" aria-current="page">Atulizar</li>
        </ol>
    </nav>

    <form action="/employee/update/@Model.UserId" method="post" class="row g-3">
        <div class="col-md-12">
            <label for="inputName" class="form-label">Nome</label>
            <input type="text" class="form-control" name="Name" id="inputName" value="@Model.Name" required>
        </div>
        <div class="col-md-12 form-group">
            <label for="inputEmail" class="form-label">E-mail</label>
            <div id="emailContainer">
                <input type="text" name="Email" id="emailInput" class="form-control" oninput="updateEmail()"
                    value="@Model.Email" required>
                <span class="fixed-domain">@@rppiscinas.com</span>
            </div>
        </div>
        <div class="col-md-12">
            <label for="inputPassword" class="form-label">Senha</label>
            <input type="password" name="Password" class="form-control" id="inputPassword" value="@Model.Password"
                required>
        </div>
        <div class="col-md-6">
            <button class="btn btn-primary w-100">Salvar</button>
        </div>
        <div class="col-md-6">
            <a href="/employee/read" class="btn btn-outline-secondary w-100">Voltar</a>
        </div>
    </form>
    <script>
        function updateEmail() {
            const input = document.getElementById("emailInput");
            const fixedDomain = "@@rppiscinas.com"

            if (input.value.includes("@@")) {
                input.value = input.value.split("@@")[0]
            }
        }
    </script>
</body>

</html>