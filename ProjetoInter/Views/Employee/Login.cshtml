<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        body {
            background-color: #f0f8ff;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-container {
            width: 400px;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            background-color: #ffffff;
        }

        .login-container h2 {
            text-align: center;
            margin-bottom: 20px;
            color: #4682b4;
        }

        .btn-primary {
            background-color: #4682b4;
            border-color: #4682b4;
        }

        .btn-primary:hover {
            background-color: #5a9bd5;
            border-color: #5a9bd5;
        }

        .form-control {
            margin-bottom: 15px;
        }

        input::placeholder {
            color: #d1c4e9;
        }

        #link-conta {
            margin-top: 10px;
        }

        .email-container {
            display: flex;
            align-items: center;
        }

        .email-input {
            width: 100%;
            max-width: 250px;
        }

        .fixed-domain {
            font-weight: bold;
            white-space: nowrap;
            margin-left: 5px;
        }
    </style>
</head>

<body>
    <div class="login-container">
        <h2>Login</h2>
        <form action="/employee/login" method="post">
            @if (ViewBag.Autenticado != null || ViewBag.Autenticado == false)
            {
                <div class="alert alert-danger">
                    Usuário não cadastrado ou senha inválida
                </div>
            }
            <div class="email-container">
                <input type="text" name="Email" placeholder="E-mail" class="form-control emial-input" required
                    oninput="updateEmail()" id="emailInput">
                <span class="fixed-domain">@@rppiscinas.com</span>
            </div>
            <div>
                <input type="password" name="Password" placeholder="Senha" class="form-control" required>
            </div>
            <div class="col-md-12">
                <button type="submit" class="btn btn-primary w-100">Login</button>
            </div>
            <div class="col-md-12">
                <a href="/employee/createLogin" class="btn btn-primary w-100" id="link-conta">Criar conta</a>
            </div>
        </form>
    </div>

    <script>
        function updateEmail() {
            const input = document.getElementById("emailInput");
            const fixedDomain = "@@rppiscinas.com"

            if (input.value.includes("@@")) {
                input.value = input.value.split("@@")[0]
            }
        }
    </script>
</body>

</html>