@model IEnumerable<ProjetoInter.Models.Service>;

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Portifolio</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <style>
        {
            background-color: #f0f8ff;
            margin: 0;
            padding: 0;
        }

        .botao {
            background-color: #4682b4;
            color: white;
        }
    </style>
</head>

<body>
    <div class="container d-flex justify-content-center align-items-center flex-column mt-4">
        <nav class="align-self-start">
            <ul class="d-flex align-items-center list-unstyled">
                <li class="p-4 fs-6"><a href=""><img width="200px"
                            src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTB1963--_yYaTEskMMurT8s4lc6iR6-AoQbw&s"
                            alt=""></a></li>
                <li class="p-4 fs-6 ms-5">
                    <h1>Agendamentos - Rio Preto Piscinas</h1>
                </li>
            </ul>
        </nav>
        <hr>
        <div class="row d-flex justify-content-center">
            @foreach (var service in ViewBag.Services)
            {
                <div class="col-md-5 d-flex mb-5">
                    <div class="col-4">
                        <img class="img-fluid rounded" src="@(service.Name == "Manutenção" ? "https://media.istockphoto.com/id/1144675499/pt/foto/before-and-after-pool-build-construction-site.jpg?s=2048x2048&w=is&k=20&c=5kFDWyvFomdZdo2FnHvGkaXxNruJ0kcb0P1KUASlJf8=" :
                            service.Name == "Limpeza" ? "https://media.istockphoto.com/id/1639988508/pt/foto/ph-and-chlorine-tester-for-swimming-pool-maintenance-tester-kit-to-measure-chlorine-and-ph-in.jpg?s=2048x2048&w=is&k=20&c=hibJFVxZ6gkoyD5E3vD0sBiyPnlNhrLtopR0oTuXS-g=" :
                            service.Name == "Reforma" ? "https://media.istockphoto.com/id/467192404/pt/foto/conjunto-de-constru%C3%A7%C3%A3o.jpg?s=2048x2048&w=is&k=20&c=fZQcJXVHAygomJH7IXy94kdqV5Zw0DekqXoEbtFwSYo=" :
                             "https://media.istockphoto.com/id/928764812/pt/foto/swimming-pool-excavation.jpg?s=2048x2048&w=is&k=20&c=xT3qfWP1UhLROXCQq00iCKcRJwo6aPwRWnjPlysfSTY=")"
                            alt=" Imagem do serviço @service.Name">
                    </div>
                    <div class="col-8 px-4">
                        <h1>@service.Name</h1>
                        <p>@service.Description</p>
                    </div>

                </div>

                }
            </div>
            <div class="m-5">
                <a href="/ClientServices/" class="text-center py-3 px-5 botao rounded text-decoration-none fs-3">Agende
                    aqui</a>
            </div>
        </div>

    </body>

    </html>